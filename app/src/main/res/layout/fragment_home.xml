<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAE9E9"
    tools:context=".ui.home.HomeFragment">


    <RelativeLayout
        android:id="@+id/activity_rLayout"
        android:layout_width="350dp"
        android:layout_height="90dp"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/activity_period_bt_change"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@android:color/white"
                android:text="change" />

            <Button
                android:id="@+id/activity_period_bt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:background="@android:color/white"
                android:text="@string/btHomeActivity"
                android:textColor="#6C6C6C" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/weight_rLayout"
        android:layout_width="350dp"
        android:layout_height="90dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/weight_bt_change"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@android:color/white"
                android:text="change" />

            <Button
                android:id="@+id/weight_bt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:background="@android:color/white"
                android:text="@string/btHomeWeight"
                android:textColor="#6C6C6C" />
        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="90dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/sleep_bt_change"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@android:color/white"
                android:text="change" />

            <Button
                android:id="@+id/sleep_bt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:background="@android:color/white"
                android:text="@string/btHomeSleep"
                android:textColor="#6C6C6C" />
        </LinearLayout>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="90dp"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/water_bt_change"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@android:color/white"
                android:text="change"

                />

            <Button
                android:id="@+id/water_bt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:background="@android:color/white"
                android:text="@string/btHomeWater"
                android:textColor="#6C6C6C" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>